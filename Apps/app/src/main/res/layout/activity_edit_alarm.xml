<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAlarmActivity">

    <TimePicker
        android:id="@+id/timePicker2"
        android:layout_width="438dp"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="148dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:text="On / Off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/OkButton"
        android:layout_width="63dp"
        android:layout_height="40dp"
        android:text="@string/done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch2"
        app:layout_constraintVertical_bias="0.524" />

    <CheckBox
        android:id="@+id/mondaytofriday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:text="@string/monday_to_friday"
        app:layout_constraintBottom_toTopOf="@+id/wednesday"
        app:layout_constraintEnd_toStartOf="@+id/switch2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker2" />

    <Button
        android:id="@+id/monday"
        android:layout_width="38dp"
        android:layout_height="43dp"
        android:layout_marginTop="37dp"
        android:backgroundTint="#FFFFFF"

        android:text="@string/m"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/friday"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker2"
        app:layout_constraintVertical_bias="0.093" />

    <Button
        android:id="@+id/wednesday"
        android:layout_width="38dp"
        android:layout_height="43dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#FFFFFF"

        android:text="@string/w"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker2"
        app:layout_constraintVertical_bias="0.096" />

    <Button
        android:id="@+id/tuesday"
        android:layout_width="39dp"
        android:layout_height="43dp"
        android:layout_marginTop="36dp"

        android:backgroundTint="#FFFFFF"
        android:text="@string/t"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/monday"
        app:layout_constraintTop_toBottomOf="@+id/timePicker2"
        app:layout_constraintVertical_bias="0.096" />

    <Button
        android:id="@+id/satturday"
        android:layout_width="41dp"
        android:layout_height="42dp"

        android:backgroundTint="#FFFFFF"
        android:text="@string/s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/thursday"
        app:layout_constraintVertical_bias="0.153" />

    <Button
        android:id="@+id/sunday"
        android:layout_width="38dp"
        android:layout_height="41dp"
        android:layout_marginBottom="220dp"
        android:backgroundTint="#FFFFFF"

        android:text="@string/s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tuesday"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/friday"
        android:layout_width="41dp"
        android:layout_height="42dp"

        android:backgroundTint="#FFFFFF"
        android:text="@string/f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker2"
        app:layout_constraintVertical_bias="0.191" />

    <Button
        android:id="@+id/thursday"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#FFFFFF"

        android:text="@string/t"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/friday"
        app:layout_constraintStart_toEndOf="@+id/wednesday"
        app:layout_constraintTop_toBottomOf="@+id/timePicker2"
        app:layout_constraintVertical_bias="0.095" />

</androidx.constraintlayout.widget.ConstraintLayout>